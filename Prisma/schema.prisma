generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model posts {
  id          Int      @id @default(autoincrement())
  imgUrl      String
  title       String   @unique
  description String
  author      String
  category    String
  slug        String   @unique
  createdAt   DateTime @default(now())
}

model users {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
}
